generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  MECHANIC
  SECRETARY
}

model User {
  ci        String    @id @unique
  password  String
  role      Role
  firstName String    @map("first_name")
  lastName  String    @map("last_name")
  deletedAt DateTime? @map("deleted_at")

  @@map("users")
}

model Vehicle {
  id    Int    @id @default(autoincrement())
  plate String @unique
  type  String
  brand String
  model String
  color String

  @@map("vehicles")
}

generator fabbrica {
  provider = "prisma-fabbrica"
}
